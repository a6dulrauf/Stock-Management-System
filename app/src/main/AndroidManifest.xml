<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.generics.infinite.stockmanagementsystem">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/sms_main_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sms_main_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SettingsActivity"></activity>

        <meta-data
            android:name="DATABASE"
            android:value="sms_db.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.generics.infinite.stockmanagementsystem" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PurchaseEntryActivity"
            android:label="@string/title_activity_purchase_entry"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ProductListActivity"
            android:label="@string/title_activity_product_list"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PurchaseOrdersActivity"
            android:label="@string/title_activity_purchase_orders"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VendorDetailsActivity"
            android:label="@string/title_activity_vendor_details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SalesOrderActivity"
            android:label="@string/title_activity_sales_orders"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CustomerDetailsActivity"
            android:label="@string/title_activity_customer_details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddVendorActivity"
            android:label="@string/title_activity_add_vendor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SalesEntryActivity"
            android:label="@string/title_activity_sales_entry"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfitLossActivity"
            android:label="@string/title_activity_profit_loss"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddCustomerActivity"
            android:label="@string/title_activity_add_customer"
            android:screenOrientation="portrait" />
        <activity android:name=".SlideShowActivity" />
    </application>

</manifest>
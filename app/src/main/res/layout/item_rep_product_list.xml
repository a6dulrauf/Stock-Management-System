<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_activity_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:background="@drawable/shape"
        android:orientation="horizontal">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/product_list_imgview"
                    android:layout_width="100dp"
                    android:src="@drawable/cam2"
                    android:layout_height="100dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/product_list_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="NAME"
                    android:textSize="@dimen/home_sub_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"/>
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/product_list_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="PRICE"
                    android:textSize="@dimen/home_sub_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"/>
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/product_list_qty"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="QUANTITY"
                    android:textSize="@dimen/home_sub_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/product_list_edit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/product_edit"/>
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/product_list_delete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/product_delete"/>
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/product_list_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/product_purchase"/>


            </LinearLayout>

    </LinearLayout>

    

</LinearLayout>
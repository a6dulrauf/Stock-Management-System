<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/settings_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settings_main_text"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="SampleText"
                android:textSize="@dimen/purchase_orders_table_text_size"/>

            <TextView
                android:id="@+id/settings_details_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/home_sub_text_size"
                android:text="detail sample text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>